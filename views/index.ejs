<%- include("partials/header") %>
<section class="hero-banner" aria-label="Banner principal">
  <div class="hero-banner-content">
    <p class="kicker home-hero-kicker">Ela&Ele Experience</p>
    <h1>Reservas e Pagamentos Online para Salao</h1>
    <p>Agende servicos, pague por M-Pesa/e-Mola/cartao e acompanhe tudo em tempo real.</p>
    <p><strong>Rapido. Organizado. Lucrativo.</strong></p>
  </div>
  <div class="hero-banner-actions">
    <a class="btn" href="/login">Criar uma reserva</a>
    <a class="btn btn-outline" href="#servicos-salao">Ver servicos</a>
  </div>
</section>

<section class="home-insights" aria-label="Destaques do salao">
  <article class="home-insight-card insight-hours">
    <img class="home-insight-photo" src="/images/home/atendimento.jpg" alt="Horario de atendimento" />
    <h3>Horario de atendimento</h3>
    <p>Seg-Sab: 08:00 as 18:00</p>
  </article>
  <article class="home-insight-card insight-location">
    <img class="home-insight-photo" src="/images/home/localizacao.jpg" alt="Localizacao do salao" />
    <h3>Localizacao</h3>
    <p>Av.Eduardo Mondlane - Vilankulo, Inhambane</p>
  </article>
  <article class="home-insight-card insight-booking">
    <img class="home-insight-photo" src="/images/home/reservas.jpg" alt="Reservas rapidas" />
    <h3>Reservas rapidas</h3>
    <p>Via WhatsApp e site, com confirmacao imediata.</p>
  </article>
  <article class="home-insight-card insight-payment">
    <img class="home-insight-photo" src="/images/home/pagamentos.jpg" alt="Pagamento flexivel" />
    <h3>Pagamento flexivel</h3>
    <p>M-Pesa, e-Mola e Cartao em um unico checkout.</p>
  </article>
</section>

<section id="servicos-salao" class="services-ticker-section">
  <h2>Servicos em destaque</h2>
  <div class="services-ticker-viewport">
    <div class="services-ticker-track">
      <% services.forEach(service => { %>
      <article class="card service-highlight ticker-card">
        <img src="<%= service.image || '/images/services/default-1.jpg' %>" alt="<%= service.name %>" class="ticker-thumb" />
        <div class="ticker-card-body">
          <h3><%= service.name %></h3>
          <p><%= service.duration %> min</p>
          <strong><%= service.price %> MT</strong>
        </div>
      </article>
      <% }) %>
      <% services.forEach(service => { %>
      <article class="card service-highlight ticker-card" aria-hidden="true">
        <img src="<%= service.image || '/images/services/default-1.jpg' %>" alt="" class="ticker-thumb" />
        <div class="ticker-card-body">
          <h3><%= service.name %></h3>
          <p><%= service.duration %> min</p>
          <strong><%= service.price %> MT</strong>
        </div>
      </article>
      <% }) %>
    </div>
  </div>
</section>

<%- include("partials/footer") %>
